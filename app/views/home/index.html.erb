<% if @stops.results.empty? %>
  <div class="alert alert-info">No stops found.</div>
<% end %>
<!--<button id="btn-current-location-small" class="btn btn-info btn-address pull-right"><i class="icon-circle-blank"></i> Update my location</button>-->
<div class="btn-group btn-group-vertical" style="width:100%;">
  <% @stops.results.each do |stop| %>
    <div style="text-align:left;" class="stopbutton btn">
      <a href="stop/<%= stop.stop_id %>">
        <div style="position:absolute;right:5px"><%= (stop.sort[0]*5280).round() unless stop.sort[0].nil? %> ft</div>
        <b><%= stop.stop_name %></b> 
        <div class="real-time" id="<%= stop.stop_id %>" data-attr="<%= stop.stop_id %>"></div>
      </a>
    </div>
    <% end %>
</div>
<div style="margin-top:1em;">
  <b>Arriving in:</b><br>
  <span class="label label-important">0&ndash;5 Min</span>
  <span class="label label-warning">5&ndash;12 Min</span>
  <span class="label label-success">12&ndash;20 Min</span>
  <span class="label label-info">&gt;20 Min</span>
</div>

<div class="modal hide fade" id="ask">
  <div class="modal-header">
    <button type="button" class="close" id="ask-btn" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3><i class="icon-truck"></i>&nbsp;MSP Bus</h3>
  </div>
  <div class="modal-body" style="text-align:center;">
    <p style="text-align:left;">Welcome to the MSP Bus application. If you provide your current location it would greatly enhance your experience, otherwise continue by dismissing this screen.</p>
    <button id="btn-current-location" class="btn btn-info btn-large btn-address"><i class="icon-circle-blank"></i> Find my location</button>

  </div>
 </div>

<div class="modal hide fade" id="error">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3><i class="icon-truck"></i>&nbsp;MSP Bus</h3>
  </div>
  <div class="modal-body" style="text-align:center;">
    <p style="text-align:left;"><p>Uh-Oh! Your location service doesnt seem to be working. Did you disable it, or does your device and/or browser not support geolocation?</p><p> To reenable follow these links:<br/><a href="https://support.google.com/chrome/answer/142065?hl=en">Chrome</a>, click on 'Enable or Disable Location Sharing'</p></p>
  </div>
</div>

<%= javascript_include_tag "realtime" %>
